<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- DBCP Listener -->
	<listener>
		<listener-class>jdbc.DBCPInitListener</listener-class>
	</listener>
	<context-param>
		<param-name>poolConfig</param-name>
		<param-value>
			jdbcDriver=com.mysql.jdbc.Driver
			jdbcUrl=jdbc:mysql://localhost:3306/
			dbName=chap14,guestbook,board
			dbUser=jspexam
			dbPass=jsppw
			validationQuery=select 1
			minIdle=3
			maxTotal=30
		</param-value>
	</context-param>

	<!-- 서블릿 -->
	<servlet>
		<servlet-name>ControllerUsingURI</servlet-name>
		<servlet-class>controller.ControllerUsingURI</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>
                /WEB-INF/commandHandlerURI.properties
            </param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerUsingURI</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- 필터 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>util.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>filter.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/WEB-INF/view/guestbook/*</url-pattern>
		<url-pattern>/WEB-INF/view/examples/*</url-pattern>
		<url-pattern>/main/profile.do</url-pattern>
		<url-pattern>/passwordChange.do</url-pattern>
	</filter-mapping>

</web-app>